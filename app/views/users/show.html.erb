<div class='row-fluid'>
	<div class='span6'>
		<h1>My Tasks</a></h1>
		<%= link_to 'create a new task', new_task_url, class: 'btn btn-success'  %></br></br>
		<div>
			<table class='table table-striped table-hover well'>
				<th></th><th>Task Name</th><th>Description</th>
				<% @tasks.each do |task| %>
					<%= render 'task_partial', task: task %>
				<% end %>
			</table>
		</div>

	</div>

	<div class='span6'>
		<h1>My Teams</a></h1>
		<%= link_to 'create a new team', new_team_url, class: 'btn btn-success'  %></br></br>
		<div>
			<table class='table table-striped table-hover well'>
				<th></th><th>Team Name</th>
				<% @teams.each do |team| %>
					<%= render 'team_partial', team: team %>
				<% end %>
			</table>
		</div>

	</div>
</div>

